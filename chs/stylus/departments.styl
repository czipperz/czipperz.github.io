.view-content
	background-color page-background-color
	width 100%;
	height 100%;
	h3
		font-size (20/14 em)
		width 100%;
		display block
		float left
		margin 8px 0 -2px 0
	> div
		color header-background
		background-color page-background-color
		#staff-name
			font-weight bold
	a:link, a:visited
		color header-background
	a:hover, a:active
		color header-default-color
	img
		float left
		margin-right 4px
	div[class|="col"]
		float left
		margin 5px 10px
		margin-left 0
		padding 0 4px
		padding-top 4px
		width 250px
		height 140px
		overflow-x auto
		white-space wrap
		background-color header-default-color
		a:hover, a:active
			color plink-hover-color
#top
	padding-bottom 0
