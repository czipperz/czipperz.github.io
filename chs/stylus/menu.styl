defaultnavbar() {
	background-color header-background
	width 100%
	height 170px
	margin-top -10px
	padding-bottom 4px
	ul {
		padding 0
		margin 0
		width 100%
		background-color header-background
		li {
			list-style none
			padding 2px 0
			height 30px
			width 100%
		}
	}
	a {
		padding 5px
		display block
		padding-left 24px
		font-size (20/14 em)
		@media screen and (max-device-width thresh) {
			font-size (30/14 em)
		}
		text-decoration none
		&:link, &:visited {
			color header-default-color
		}
		&:hover, &:active {
			color header-hover-color
			border-bottom 2px solid header-hover-color
			background-color menu-hover-color
		}
	}
}
div#navbar {
	defaultnavbar()
}
@media screen and (min-width: thresh) {
	div#navbar {
		height 38px
		margin-top 0
		padding-bottom 0
		ul {
			margin-left 16px
			width auto
			li {
				width auto
				display inline
				float left
				margin-bottom 6px
				padding 0
			}
		}
		a {
			padding 7px 8px
			padding-top 5px
			display normal
		}
	}
}
@media screen and (max-device-width: thresh) {
	div#navbar {
		defaultnavbar()
		height 300px
		a {
			font-size 1.25 em
		}
	}
}
